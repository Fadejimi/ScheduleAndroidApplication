<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="taskViewModel"
            type="app.viewmodels.ItemTaskViewModel" />
    </data>
    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@{taskViewModel.name}"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:id="@+id/title_view"
                tools:text="Schedule"
                tools:ignore="RtlCompat"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_view"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_marginTop="20dp"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:rating="@{taskViewModel.rating}"
                android:id="@+id/rating_view"
                tools:rating="2.4"
                tools:ignore="RtlCompat"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating_view"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_view"
                    android:onClick="@{taskViewModel::onClickView}"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:onClick="@{taskViewModel::onClickDelete}"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>